# Application Settings
APP_NAME=Syncly Backend
APP_VERSION=1.0.0
DEBUG=true
LOG_LEVEL=INFO

# Database Configuration
DATABASE_URL=sqlite+aiosqlite:///./syncly.db
# For PostgreSQL: postgresql+asyncpg://syncly:syncly@localhost:5432/syncly

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# Security Settings
SECRET_KEY=your-super-secret-key-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Settings
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://127.0.0.1:5500"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# AI Services (Optional - can be empty for testing)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
GOOGLE_TRANSLATE_API_KEY=

# AWS Settings (Optional - can be empty for testing)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=syncly-media

# File Upload Settings
MAX_FILE_SIZE=52428800
ALLOWED_FILE_TYPES=["image/*", "video/*", "audio/*", "application/pdf", "text/*"]

# WebRTC Settings
STUN_SERVERS=["stun:stun.l.google.com:19302"]
TURN_SERVERS=[]

# Monitoring
PROMETHEUS_ENABLED=true
SENTRY_DSN= 